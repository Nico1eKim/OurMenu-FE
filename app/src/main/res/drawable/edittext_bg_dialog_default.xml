<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 에디트텍스트가 포커스를 받았을때의 모양 및 색상 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 테두리 모양 -->
            <stroke android:width="0.8dp" android:color="@color/Neutral_500" />
            <corners android:radius="12dp" />
            <!-- 배경색  -->
            <solid android:color="@color/Neutral_100" />
            <padding android:left="28dp" android:right="17dp" />
        </shape>

    </item>

    <!-- EditText 가 포커스를 받지 않은 일반 상태일 때의 모양 및 색상 -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <!-- 테두리 모양 -->
            <stroke android:width="0.8dp" android:color="@color/Neutral_300" />
            <corners android:radius="12dp" />
            <!-- 배경색  -->
            <solid android:color="@color/Neutral_100" />
            <padding android:left="28dp" />
        </shape>
    </item>
</selector>
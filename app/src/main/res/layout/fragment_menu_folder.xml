<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clcl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.MenuFolderFragment">


    <ImageView
        android:id="@+id/iv_menu_folder_main_image"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:scaleType="center"
        android:src="@drawable/sample_menu_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_menu_folder_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Neutral_White" />

    <ImageView
        android:id="@+id/iv_menu_folder_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_folder_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/pretendard_500"
        android:maxLength="10"
        android:text="한강 뷰 맛집"
        android:textColor="@color/Neutral_White"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_menu_folder_main_image"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_menu_folder_edit_main_name"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="9dp"
        android:rotationY="180"
        android:src="@drawable/ic_pen"
        app:layout_constraintBottom_toBottomOf="@id/tv_menu_folder_main_name"
        app:layout_constraintStart_toEndOf="@id/tv_menu_folder_main_name"
        app:layout_constraintTop_toTopOf="@id/tv_menu_folder_main_name"
        app:tint="@color/Neutral_White" />

    <TextView
        android:id="@+id/tv_menu_folder_menu_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/pretendard_400"
        android:text="메뉴 4개"
        android:textColor="@color/Neutral_White"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_menu_folder_main_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu_folder_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_folder_main_image" />

    <Button
        android:id="@+id/btn_menu_folder_add_menu"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_bg_add_menu_neutral_100"
        android:elevation="6dp"
        android:fontFamily="@font/pretendard_600"
        android:text="메뉴 추가하기"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_menu_folder_menu_list" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu_folder_vert"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_menu_folder_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/button_shape_top_corner"
            android:elevation="11dp"
            android:fontFamily="@font/pretendard_500"
            android:text="메뉴판 수정하기"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_menu_folder_delete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/button_shape_bottom_corner"
            android:elevation="10dp"
            android:fontFamily="@font/pretendard_500"
            android:text="삭제하기"
            android:textColor="@color/Primary_500_main"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_folder_edit" />


        <Button
            android:id="@+id/btn_menu_folder_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_shape_cancel"
            android:elevation="10dp"
            android:fontFamily="@font/pretendard_500"
            android:text="취소"
            android:textColor="@color/Neutral_500"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_folder_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- TODO 카테고리 필터 추가 -->


</androidx.constraintlayout.widget.ConstraintLayout>
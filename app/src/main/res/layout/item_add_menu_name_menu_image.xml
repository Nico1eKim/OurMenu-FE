<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_add_menu_menu_image"
    android:layout_width="228dp"
    android:layout_height="176dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_add_menu_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shapeAppearance="@style/corner_rd_12"
        android:scaleType="fitCenter"
        android:background="@color/Neutral_300"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_add_menu_union_bg"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@color/Neutral_White"
        app:shapeAppearance="@style/corner_rd_12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"/>
    <ImageView
        android:id="@+id/iv_add_menu_union"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_union"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"/>
    <TextView
        android:id="@+id/tv_add_menu_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "최소 한장은 업로드 해주세요"
        android:textColor="@color/Neutral_White"
        android:fontFamily="@font/pretendard_600"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="48dp"/>
</FrameLayout>
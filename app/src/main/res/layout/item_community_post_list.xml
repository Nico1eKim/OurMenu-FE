<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_item_cpl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/pretendard_600"
        android:letterSpacing="-0.03"
        android:text="@string/menu"
        android:textColor="@color/Neutral_900"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_cpl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="132dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_500"
        android:maxLines="2"
        android:text="화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집화산집"
        android:textColor="@color/Neutral_700"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_cpl_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_600"
        android:text="112"
        android:textColor="@color/Neutral_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_cpl_viewed"
        app:layout_constraintEnd_toStartOf="@id/iv_item_cpl_viewed"
        app:layout_constraintTop_toTopOf="@id/iv_item_cpl_viewed" />

    <ImageView
        android:id="@+id/iv_item_cpl_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_viewed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_cpl_profile_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_item_cpl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/pretendard_400"
        android:text="김시진"
        android:textColor="@color/Neutral_900"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_cpl_profile_image"
        app:layout_constraintTop_toTopOf="@id/iv_item_cpl_profile_image" />

    <TextView
        android:id="@+id/tv_item_cpl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/pretendard_300"
        android:text="1h ago"
        android:textColor="@color/Neutral_500"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_cpl_profile_image"
        app:layout_constraintStart_toEndOf="@id/iv_item_cpl_profile_image" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_cpl_item_post_image"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_sample3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/corner_rd_12" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_item_cpl_image_number"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="#66000000"
        app:layout_constraintBottom_toBottomOf="@id/siv_cpl_item_post_image"
        app:layout_constraintEnd_toEndOf="@id/siv_cpl_item_post_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
        android:id="@+id/tv_item_cpl_image_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_600"
        android:text="18"
        android:textColor="@color/Neutral_100"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/siv_item_cpl_image_number"
        app:layout_constraintEnd_toEndOf="@id/siv_item_cpl_image_number"
        app:layout_constraintStart_toStartOf="@id/siv_item_cpl_image_number"
        app:layout_constraintTop_toTopOf="@id/siv_item_cpl_image_number" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/Neutral_300"
        app:layout_constraintTop_toBottomOf="@id/siv_cpl_item_post_image" />


</androidx.constraintlayout.widget.ConstraintLayout>
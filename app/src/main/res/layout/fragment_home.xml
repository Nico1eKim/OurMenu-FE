<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO 나중에 LinearLayout 으로 묶기 - 가독성 편하게 -->
            <TextView
                android:id="@+id/tv_home_mention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스트레스 받을 때"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="44sp"
                android:textColor="@color/Neutral_900"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp" />

            <LinearLayout
                android:id="@+id/ll_home_recommend_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_home_mention"
                app:layout_constraintTop_toBottomOf="@id/tv_home_mention"
                android:layout_marginTop="-10dp">


                <ImageView
                    android:id="@+id/iv_home_icon_recommend_main"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@color/Neutral_Black"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tv_home_keyword_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매콤"
                    android:textSize="44sp"
                    android:textColor="@color/Neutral_900"
                    android:fontFamily="@font/pretendard_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한 음식"
                    android:textSize="44sp"
                    android:textColor="@color/Neutral_900"
                    android:fontFamily="@font/regular"
                    android:textFontWeight="300"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_home_recommend_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_home_mention"
                app:layout_constraintTop_toBottomOf="@id/ll_home_recommend_main"
                android:layout_marginTop="-10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Neutral_900"
                    android:textSize="44sp"
                    android:text="추천"
                    android:fontFamily="@font/pretendard_bold"/>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/sample_menu_image"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginEnd="7dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Neutral_900"
                    android:textSize="44sp"
                    android:text="드려요"
                    android:textFontWeight="300"
                    android:fontFamily="@font/regular"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_menu_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/ll_home_recommend_main_2"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_home_menu_main"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />

            <!-- 여기부터 sub 첫번째 메뉴 추천 -->
            <LinearLayout
                android:id="@+id/ll_home_recommend_sub_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_main"
                app:layout_constraintStart_toStartOf="@id/ll_home_recommend_main"
                android:layout_marginTop="28dp">

                <ImageView
                    android:id="@+id/iv_home_icon_recommend_sub_first"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sample_menu_image"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:id="@+id/tv_home_mention_sub_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="집밥이 그리울 땐,"
                    android:textSize="20sp"
                    android:textColor="@color/Neutral_900"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_menu_sub_first"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/ll_home_recommend_sub_first"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_home_menu_sub"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                />

            <!-- 여기부터 두번째 sub 메뉴 추천 -->

            <LinearLayout
                android:id="@+id/ll_home_recommend_sub_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_first"
                app:layout_constraintStart_toStartOf="@id/ll_home_recommend_main"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/iv_home_icon_recommend_sub_second"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sample_menu_image"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:id="@+id/tv_home_mention_sub_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="집밥이 그리울 땐,"
                    android:textSize="20sp"
                    android:textColor="@color/Neutral_900"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_menu_sub_second"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/ll_home_recommend_sub_second"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_home_menu_sub"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="320dp"
                android:layout_height="108dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_second"
                android:background="@color/Neutral_100"
                app:shapeAppearanceOverlay="@style/corner_rd_12"
                android:layout_marginTop="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Neutral_900"
                android:textSize="14sp"
                android:text="메뉴 추천이 마음에 드시나요?"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_second"
                android:layout_marginTop="50dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_good_button"
                android:layout_width="134dp"
                android:layout_height="32dp"
                android:background="@color/Neutral_White"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_second"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="82.5dp"
                android:layout_marginStart="41dp"
                app:shapeAppearanceOverlay="@style/corner_rd_8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:textFontWeight="500"
                app:layout_constraintStart_toStartOf="@id/siv_home_good_button"
                app:layout_constraintTop_toTopOf="@id/siv_home_good_button"
                app:layout_constraintEnd_toEndOf="@id/siv_home_good_button"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_good_button"
                android:textColor="@color/Neutral_900"
                android:text="😃 딱 좋아요"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_bad_button"
                android:layout_width="134dp"
                android:layout_height="32dp"
                android:background="@color/Neutral_White"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_second"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="82.5dp"
                android:layout_marginEnd="41dp"
                app:shapeAppearanceOverlay="@style/corner_rd_8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:textFontWeight="500"
                app:layout_constraintStart_toStartOf="@id/siv_home_bad_button"
                app:layout_constraintTop_toTopOf="@id/siv_home_bad_button"
                app:layout_constraintEnd_toEndOf="@id/siv_home_bad_button"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_bad_button"
                android:textColor="@color/Neutral_900"
                android:text="😥 아쉬워요" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_home_menu_sub_second"
                android:text="답변을 바탕으로 메뉴 추천의 기준이\n아워님 맞춤으로 수정돼요!"
                android:textColor="@color/Neutral_500"
                android:textFontWeight="500"
                android:fontFamily="@font/regular"
                android:textAlignment="center"
                android:layout_marginTop="160dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

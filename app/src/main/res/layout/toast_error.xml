<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="220dp"
    android:background="@drawable/btn_bg_20_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="2dp">
        <ImageView
            android:id="@+id/iv_toast_error"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_toast_error"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_toast_error"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="error message"
            android:textColor="@color/Neutral_700"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_600"
            app:layout_constraintStart_toEndOf="@id/iv_toast_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

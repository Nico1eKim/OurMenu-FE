<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_menu_add_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_menu_add_name_menuimage"
                android:layout_width="228dp"
                android:layout_height="176dp"
                android:background="@color/Neutral_300"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_menu_add_name_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_600"
                android:text="메뉴판"
                android:textColor="@color/Neutral_900"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_menu_add_name_menuimage" />

            <TextView
                android:id="@+id/tv_menu_add_name_name_must"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_600"
                android:text="*"
                android:textColor="@color/Neutral_900"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_menu_add_name_name"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/iv_menu_add_name_menuimage" />
            <FrameLayout
                android:id="@+id/fl_menu_add_tag_tag"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_menu_add_name_name">

                <EditText
                    android:id="@+id/et_menu_add_tag_tag"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_bg_normal"
                    android:fontFamily="@font/pretendard_600"
                    android:hint="나만의 메뉴판"
                    android:textColor="@color/Neutral_700"
                    android:textColorHint="@color/Neutral_500"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

                <ImageView
                    android:id="@+id/iv_menu_add_tag_tag"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="28dp"
                    android:src="@drawable/ic_magnifier" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_menu_add_name_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape_big"
        android:elevation="8dp"
        android:enabled="true"
        android:fontFamily="@font/pretendard_600"
        android:text="다음"
        android:textColor="@color/Neutral_White"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_ambsi_coffee"
            android:layout_width="36dp"
            android:layout_height="36dp">

            <ImageView
                android:layout_width="20dp"

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".community.CommunityFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_community_topbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/Neutral_White"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="115dp"
                android:layout_height="17dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_logo_ourmenu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_community_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_title_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_community_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edittext_bg_search"
        android:drawableRight="@drawable/ic_search"
        android:elevation="4dp"
        android:fontFamily="@font/pretendard_500"
        android:hint="게시글 검색"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/Neutral_700"
        android:textColorHint="@color/Neutral_500"
        android:textSize="14sp"
        android:theme="@style/CustomCursorColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_community_filter"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_bg_8_n100"
        android:drawableEnd="@drawable/ic_filter"
        android:drawableTint="@color/Neutral_500"
        android:fontFamily="@font/pretendard_600"
        android:includeFontPadding="false"
        android:letterSpacing="-0.035"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingVertical="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="14dp"
        android:text="최신순"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_community_topbar" />

    <LinearLayout
        android:id="@+id/ll_community_filter_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:clipToPadding="false"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_community_filter">

        <Button
            android:id="@+id/btn_community_newest"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_bg_top_corner"
            android:fontFamily="@font/pretendard_500"
            android:letterSpacing="-0.035"
            android:text="최신순"
            android:textColor="@color/Primary_500_main"
            android:textSize="14sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_community_most_viewed"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_bg_bottom_corner"
            android:fontFamily="@font/pretendard_500"
            android:letterSpacing="-0.035"
            android:text="조회순"
            android:textColor="@color/Neutral_500"
            android:textSize="14sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_community"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_community_filter"
        tools:listitem="@layout/item_community_post" />

    <ImageView
        android:id="@+id/iv_community_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_pen_with_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
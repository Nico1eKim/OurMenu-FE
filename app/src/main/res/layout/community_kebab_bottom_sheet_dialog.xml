<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="168dp">

    <LinearLayout
        android:id="@+id/ll_ckbsg_main"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_ckbsg_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btn_bg_top_corner"
            android:fontFamily="@font/pretendard_500"
            android:text="수정하기"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/Neutral_300" />

        <Button
            android:id="@+id/btn_ckbsg_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/btn_bg_bottom_corner"
            android:fontFamily="@font/pretendard_500"
            android:text="삭제하기"
            android:textColor="@color/Primary_500_main"
            android:textSize="16sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/ll_ckbsg_main">

        <Button
            android:id="@+id/btn_ckbsg_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg_12_white"
            android:elevation="8dp"
            android:fontFamily="@font/pretendard_500"
            android:text="취소"
            android:textColor="@color/Neutral_500"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
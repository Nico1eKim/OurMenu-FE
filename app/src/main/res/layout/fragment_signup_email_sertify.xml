<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_signup_email_sertify"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_email_sended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/pretendard_600"
        android:text="메일을 보냈습니다!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:text="아래 인증 코드를 입력해주세요."
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_sended" />

    <LinearLayout
        android:id="@+id/ll_email_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_required">

        <EditText
            android:id="@+id/et_code_1"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/et_code_2"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>
        <EditText
            android:id="@+id/et_code_3"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>
        <EditText
            android:id="@+id/et_code_4"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>
        <EditText
            android:id="@+id/et_code_5"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>
        <EditText
            android:id="@+id/et_code_6"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_shape_bordered"
            android:fontFamily="@font/pretendard_600"
            android:textColor="@color/Neutral_700"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginRight="8dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_signup_email_sertify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape_create"
        android:fontFamily="@font/pretendard_600"
        android:text="확인"
        android:textColor="@color/Neutral_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>
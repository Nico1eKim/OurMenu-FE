<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_spinner_item_background_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tv_spinner_item_background_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@null"
        android:fontFamily="@font/pretendard_600"
        android:includeFontPadding="false"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:layout_marginRight="25dp"
        android:hint="직접 입력하기"
        android:textColor="@color/Neutral_300"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/iv_show_dropdown"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_polygon_down"
        android:layout_marginVertical="15dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"/>
</FrameLayout>

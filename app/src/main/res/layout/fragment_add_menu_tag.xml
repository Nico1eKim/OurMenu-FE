<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_add_menu_tag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_add_menu_tag_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_600"
        android:text="태그"
        android:textColor="@color/Neutral_900"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_add_menu_tag_tag"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_menu_tag_tag">

        <EditText
            android:id="@+id/et_add_menu_tag_tag"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_bg_normal"
            android:fontFamily="@font/pretendard_600"
            android:hint="태그"
            android:textColor="@color/Neutral_700"
            android:textColorHint="@color/Neutral_500"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <ImageView
            android:id="@+id/iv_add_menu_tag_tag"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="28dp"
            android:src="@drawable/ic_magnifier" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_add_menu_tag_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_600"
        android:text="메모"
        android:textColor="@color/Neutral_900"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_add_menu_tag_tag" />

    <EditText
        android:id="@+id/et_add_menu_tag_memo"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg_normal"
        android:fontFamily="@font/pretendard_600"
        android:gravity="start|top"
        android:hint="메모를 입력해주세요."
        android:textColor="@color/Neutral_700"
        android:textColorHint="@color/Neutral_500"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_menu_tag_memo" />

    <TextView
        android:id="@+id/tv_add_menu_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_600"
        android:text="아이콘"
        android:textColor="@color/Neutral_900"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_add_menu_tag_memo" />

    <FrameLayout
        android:id="@+id/fl_add_menu_tag_mappin"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_add_menu_tag_memo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mappin_background_circle" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_watermelon" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_add_menu_tag_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_shape_big"
        android:elevation="8dp"
        android:enabled="true"
        android:fontFamily="@font/pretendard_600"
        android:text="메뉴 등록하기"
        android:textColor="@color/Neutral_White"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
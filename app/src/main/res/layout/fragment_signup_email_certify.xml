<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_signup_email_certify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/tv_signup_email_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/pretendard_600"
        android:text="메일을 보냈습니다!"
        android:textColor="@color/Neutral_900"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_signup_certify_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bold"
        android:text="5분 안에 "
        android:textColor="@color/Primary_500_main"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_email_sent" />

    <TextView
        android:id="@+id/tv_signup_certify_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_600"
        android:text="인증 코드를 입력해주세요."
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_signup_certify_minute"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_email_sent" />

    <LinearLayout
        android:id="@+id/ll_signup_email_code_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_certify_sub">

        <EditText
            android:id="@+id/et_signup_code_1"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_signup_code_2"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_signup_code_3"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_signup_code_4"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_signup_code_5"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_signup_code_6"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_bg_default"
            android:fontFamily="@font/pretendard_600"
            android:maxWidth="37dp"
            android:maxLines="1"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="14dp"
            android:paddingHorizontal="14dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_signup_email_resend"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@id/tv_signup_email_resend"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:id="@+id/view_signup_resend_line_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Neutral_300"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_signup_email_resend_check"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_signup_email_resend_check"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="메일이 오지 않았나요?"
            android:layout_marginHorizontal="10dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_500"
            android:fontFamily="@font/pretendard_600"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_signup_resend_line_left"
            app:layout_constraintEnd_toStartOf="@id/view_signup_resend_line_right"/>
        <View
            android:id="@+id/view_signup_resend_line_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Neutral_300"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_signup_email_resend_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_signup_email_resend"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:text="메일 다시 보내기"
        android:textColor="@color/Primary_500_main"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_signup_email_sertify"
        android:layout_marginBottom="35dp"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_600"/>

    <Button
        android:id="@+id/btn_signup_email_sertify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_big"
        android:fontFamily="@font/pretendard_600"
        android:text="확인"
        android:textColor="@color/Neutral_White"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>